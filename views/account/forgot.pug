extends ../layout

block content
  .container
    .panel
      .panel-body
        form(method='POST')
          legend Forgot Password
          .form-group
            p Enter your email address below and we'll send you password reset instructions.
            label(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
          button.btn.btn-success(type='submit') Reset Password
